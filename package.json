{
  "name": "videohub-dashboard",
  "version": "1.0.0",
  "description": "A video dashboard for local video files.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --dir",
    "build:mac": "electron-builder --mac --dir"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.videohub",
    "productName": "VideoHub",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "dir"
    },
    "mac": {
      "target": "dir"
    }
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3"
  }
}
